
@{
    ViewBag.Title = "Okunacaklar";
}

<table class="table table-hover my-5">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Kitap İsmi</th>
            <th scope="col">Yazar</th>
            <th scope="col">Sayfa</th>
            <th scope="col">Sil</th>
            <th scope="col">Okudum</th>
        </tr>
    </thead>
    <tbody>
        @{
            int rowNum = 0;
        }
        @foreach (MVCproject.Models.List book in ViewBag.Okunacaklar)
        {
            rowNum++;
            <tr>
                <th scope="row">@rowNum</th>
                <td>@book.BookName</td>
                <td>@book.Author</td>
                <td>@book.Page</td>
                <td>
                    <a href="#" onclick="DeleteBook(@book.ID);" style="color:#000">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                        </svg>
                    </a>
                </td>
                <td class="ps-4">
                    <a href="#" onclick="AddBook(@book.ID);" style="color:#000">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
                        </svg>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

