<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container nav-container">
            <div>
                <a class="navbar-brand" href="/">Ne Okusam?</a>
            </div>
            <div>
                @using (Html.BeginForm("Search", "Home", FormMethod.Get))
                {   <div class="row">
                        <div class="col-9">
                            <input class="form-control me-2" type="search" placeholder="Kitap Ara" aria-label="Search" name="query" />
                        </div>
                        <div class="col-3">
                            <button class="btn btn-outline-secondary" type="submit" for="query">Ara</button>
                        </div>
                        
                    </div>}
            </div>
            <div>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/Liste/Okuduklarim">Okuduklarım</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Liste/Okunacaklar">Okunacak Listem</a>
                        </li>
                    </ul>

                </div>
            </div>

        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>